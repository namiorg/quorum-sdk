{
    "name": "namiorg/quorum-sdk",
    "description": "An SDK to easily work with the Quorum API",
    "license": "MIT",
    "authors": [
        {
            "name": "Sean Stickle",
            "email": "sstickle@nami.org",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-laravel": "^1.4",
        "vlucas/phpdotenv": "^5.3"
    },
    "autoload": {
        "psr-4": {
            "NAMI\\QuorumSdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NAMI\\QuorumSdk\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
